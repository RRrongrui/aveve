<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/all_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_tribune_item"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv_imgllal"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/tribunr_itme_dian"
            android:layout_width="8dp"
            android:layout_marginLeft="17dp"
            android:layout_height="8dp" />

        <TextView
            android:singleLine="true"
            android:id="@+id/tv_content"
            android:textColor="#252525"
            android:layout_width="wrap_content"
            android:text="原始森林第六挖宝藏，徒步5小时绝对刺激"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_imgllal"
            android:layout_marginStart="10dp" />
    </RelativeLayout>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:text="钓客"
        android:textSize="13sp"
        android:textColor="#b6b6b6"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tribune_item_comm"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/tv_title"
        android:layout_toStartOf="@+id/tv_item_shuliang"
        android:layout_marginEnd="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="266"
        android:textColor="#3fcaf1"
        android:textSize="13sp"
        android:layout_marginEnd="12dp"
        android:id="@+id/tv_item_shuliang"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true" />
</RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="15dp"
        android:background="#dddddd" />
</LinearLayout>